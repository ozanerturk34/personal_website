{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "test", "lint"]
      }
    }
  },
  "namedInputs": {
    "noMarkdown": ["!{projectRoot}/**/*.md"]
  },
  "targetDefaults": {
    "dev": {
      "dependsOn": ["^build"]
    },
    "build": {
      "inputs": ["noMarkdown", "^noMarkdown"],
      "dependsOn": ["^build"]
    },
    "test": {
      "inputs": ["noMarkdown", "^noMarkdown"]
    },
    "lint": {
      "inputs": ["noMarkdown", "^noMarkdown"]
    }
  },
  "affected": {
    "defaultBase": "main"
  }
}
